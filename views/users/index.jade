extends ../layout

block content
  .container
    h1.page-header 회원 목록
    
    table.table.table-striped.table-bordered
      thead
        tr
          th 이름
          th 이메일
          th 가입일시
          th
      tbody
        each user in users
          tr
            td
              a(href='/users/#{user._id}')= user.name
            td= user.email
            td= moment(user.createdAt).format('YYYY-MM-DD HH:mm:ss')
            td
              if (currentUser.id == user.id || user.admin == 'yes')
              else 
                a.btn.btn-xs.btn-default(href='/users/#{user._id}/auth?_method=PUT') 권한주기
                | 
                a.btn.btn-xs.btn-default(href='/users/#{user._id}?_method=DELETE') 삭제
            
